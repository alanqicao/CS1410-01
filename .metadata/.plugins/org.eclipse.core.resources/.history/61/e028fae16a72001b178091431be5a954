/**
 * 
 */
package nuisance;

/**
 * @author caose_000
 *
 */
public class Person {
	private String name;
	private int age;
	/**
	 * @param name
	 * @param age
	 */
	public Person(String name, int age) {
		if(age>=1 && age<=150) {
			this.age = age;
		} else {
			throw new IllegalArgumentException("Age between 1 and 150 (inclusive)");
		}
		this.name = name;
		
	}
	/**
	 * @return the name
	 */
	public String getName() {
		return name;
	}
	/**
	 * @return the age
	 */
	public int getAge() {
		return age;
	}
	@Override
	public String toString() {
		return name+"("+age+ ")";
	}
	
}
